@model IEnumerable< Semester_Project_0._1.Models.StudentType> 

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="row pt-6">
            <h2 class="text-primary">Student List</h2>
        </div>
            <div class="col-6 text-right">
                <a asp-controller="StudentType" asp-action="Create" class="btn btn-primary">Add new Student Type</a>
            </div>
        </div>
    <br />
    @if(Model.Count()>0) { 
        <table class="table tabble-bordered table-striped" style="width:99%">
            <thread>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Type Name
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.Id</td>
                    <td width="15%">@obj.Name</td>
                    <td width="20%">
                        <div class="btn-group"role="group">
                            <a asp-controller="StudentType" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="StudentType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No items in the database</p>
    }
</div>

