@model IEnumerable< Semester_Project_0._1.Models.Item> 

@{
    ViewData["Title"] = "Index";
}

<h1>Index - Items</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="row pt-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
            <div class="col-6 text-right">
                <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
            </div>
        </div>
    <br />
    @if(Model.Count()>0) { 
        <table class="table tabble-bordered table-striped" style="width:99%">
            <thread>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="24%">@item.Id</td>
                    <td width="24%">@item.Name</td>
                    <td width="24%">@item.Borrower</td>
                    <td width="24%">@item.Lender</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No items in the database</p>
    }
</div>

