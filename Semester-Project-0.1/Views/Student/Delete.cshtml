@model Semester_Project_0._1.Models.ViewModels.StudentVM;
<form method="post" asp-action="DeletePost">
    <input asp-for="Student.StudentId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Student</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Student.StudentNameFirst"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentNameLast"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentEmail"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Student.StudentNameFirst" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Student.StudentNameLast" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Student.StudentEmail" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <select asp-for="Student.StudentTypeId" asp-items="@Model.TypeDropDown" disabled class="form-control">
                            <option selected>--Select Student Type--</option>
                        </select>
                    </div>
                </div>
                <div class=" form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-75" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-75">Back</a>
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}