@model Semester_Project_0._1.Models.ViewModels.StudentVM;
<form method="post" asp-action="Update">
    <input asp-for="Student.StudentId" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Student</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Student.StudentNameFirst"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentNameLast"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentEmail"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Student.StudentType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Student.StudentNameFirst" class="form-control" />
                        <span asp-validation-for="Student.StudentNameFirst" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Student.StudentNameLast" class="form-control" />
                        <span asp-validation-for="Student.StudentNameLast" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Student.StudentEmail" class="form-control" />
                        <span asp-validation-for="Student.StudentEmail" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="Student.StudentTypeId" asp-items="@Model.TypeDropDown" class="form-control" >
                            <option selected>--Select Student Type--</option>
                        </select>
                        <span asp-validation-for="Student.StudentTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
}
    }