@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="row">
    @if (TempData.ContainsKey("newAdminSignUp")) { 
        <div class="container">
            <div class="alert alert-success alert-dismissible">
                <a href="a" class="close" data-dismiss="alert" aria-label="close">x</a>
                <strong>@TempData["ssuserID"].ToString()Account created for @TempData["newAdminSignUp"].ToString()</strong>
            </div>
        </div>
    }
    <div class="container">
        @if (User.IsInRole(Semester_Project_0._1.Utility.Helper.Admin))
        {
        <div class=" row">
            <div class="from-group col-4" id="divInstructureList">
                <label> Select Instructure</label>
                @Html.DropDownList("instructureId", new SelectList(ViewBag.InstuctureList, "Id", "FullName", "FirstName"), new
                { @class = "form-control select2", @onchange = "OnInstructerIdChange()" })
            </div>
            <div class="col-3 offset-5">
                <a asp-controller="Account" asp-action="Register" class="btn-secondary form-control">Admin Registration</a> 
            </div>
        </div>
        }
            @if(User.IsInRole(Semester_Project_0._1.Utility.Helper.Instructure) || User.IsInRole(Semester_Project_0._1.Utility.Helper.User))
            {
    <div hidden class="form-group row">

        <input id="instructureId" type="text" maxlength="100" class="form-control" value="@HttpContextAccessor.HttpContext.Session.GetString("ssuserID")" />
    </div>
            }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditClass" />


<div class="text-right pt-2">
    <p>@HttpContextAccessor.HttpContext.Session.GetString("ssuserName")'s account is loged in</p>
</div>
